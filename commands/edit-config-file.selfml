(trigger)

(name [Edit Configuration File])

(only-in text.tex.latex)

(input nothing)

(output nothing)

(save nothing)

(script [AccountFile="$HOME/Library/Preferences/com.macromates.textmate.latex_config.plist"
if [[ ! -e "$AccountFile" ]]; then
    cat "$TM_BUNDLE_SUPPORT/latex.config" > "$AccountFile"
fi
open txmt://open?url=file://$AccountFile])